<% content_for :header_content do%>
  <div id="header-text">
    Semantic Geotagging
  </div>
  <%= link_to(image_tag("/images/home_image.png", {:alt => 'example', :id=>"header-img-home"}), {:controller=>'entities', :action => 'show', :id => session[:home_entity_id]}) %>
<% end %>

<div class="entity-content">
<p class="descriptive-content">
  <%=h @entity.title %>
</p>

<p class="descriptive-content">
  <%=h @entity.description %>
</p>

<p>
  <b>Location:</b>
  <%=h @entity.location %>
</p>

<p>
  <b>Lat:</b>
  <%=h @entity.lat %>
  <b>Lng:</b>
  <%=h @entity.lng %>
</p>
</div>
<p class="descriptive-instruction">Select a category to view or add information.</p>
<% @categories.each do |category| %>
  <div class="category">
    <div class="category-name">
    <%= link_to category.comment_category.name,
      comments_path(:entity_id=>@entity, :category_id=>category.comment_category_id) %>
    </div>
    <div class="counter">
      <%= "(#{category.counter})" %>
    </div>
  </div>
<% end %>

<%= link_to 'Edit', edit_entity_path(@entity) %> |
<%= link_to 'Back', entities_path %>