<div class="entity-content">
<p class="descriptive-content">
  <%=h @comment.user.login %> said,
</p>

<p class="descriptive-content">
  <%=h @comment.description %>
</p>
</div>

<p class="descriptive-instruction">Categories: a long description of the instruction</p>

<% @categories.each do |category| %>
  <div class="category">
    <div class="category-name">
    <%= link_to category.response_category.name,
      comment_responses_path(:comment_id=>@comment, :category_id=>category) %>
    </div>
    <div class="counter">
      <%= "(#{category.counter})" %>
    </div>
  </div>
<% end %>

<%= link_to 'Edit', edit_comment_path(@comment) %> |
<%= link_to 'Back', comments_path %>